<%- include('layouts/main.ejs') %>

  <div class="container">
    <div class="row">
      <main class="col-md-12">
        <br />
        <hr />
        <h2>
          <%= viewData.student.firstName %>
            <%= viewData.student.lastName %> - Student: <%= viewData.student.studentNum %>
        </h2>
        <form method="post" action="/student/update">
          <input type="hidden" name="studentNum" value="<%= viewData.student.studentNum %>" />
          <fieldset>
            <legend>Personal Information</legend>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label>First Name:</label>
                  <input class="form-control" name="firstName" type="text" value="<%= viewData.student.firstName %>" />
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label>Last Name:</label>
                  <input class="form-control" name="lastName" type="text" value="<%= viewData.student.lastName %>" />
                </div>
              </div>
            </div>
          </fieldset>

          <fieldset>
            <legend>Contact Information</legend>
            <div class="form-group">
              <label>Email:</label>
              <input class="form-control" name="email" type="email" value="<%= viewData.student.email %>" />
            </div>
            <div class="form-group">
              <label>Address (Street):</label>
              <input class="form-control" name="addressStreet" type="text" value="<%= viewData.student.addressStreet %>" />
            </div>
            <div class="form-group">
              <label>Address (City):</label>
              <input class="form-control" name="addressCity" type="text" value="<%= viewData.student.addressCity %>" />
            </div>
            <div class="form-group">
              <label>Address (Province):</label>
              <input class="form-control" name="addressProvince" type="text" value="<%= viewData.student.addressProvince %>" />
            </div>
          </fieldset>

          <fieldset>
            <legend>Additional Information</legend>
            <div class="form-group">
              <label>Teaching Assistant (TA):</label>
              <input type="checkbox" name="TA" <%=viewData.student.TA ? "checked" : "" %>
              />
            </div>
            <div class="form-group">
              <label>Status:</label>
              <div>
                <label>
                  <input type="radio" name="status" value="Full Time" <%=viewData.student.status==="Full Time" ? "checked" : ""
                    %>
                  />
                  Full Time
                </label>
                <label>
                  <input type="radio" name="status" value="Part Time" <%=viewData.student.status==="Part Time" ? "checked" : ""
                    %>
                  />
                  Part Time
                </label>
              </div>
            </div>
            <div class="form-group">
              <label>Course:</label>
              <% if (viewData.courses && viewData.courses.length> 0) { %>
                <select class="form-control" name="course" id="course">
                  <option value="">Select Course</option>
                  <% viewData.courses.forEach(course=> { %>
                    <option value="<%= course.courseId %>" <%=course.selected ? "selected" : "" %> >
                      <%= course.courseCode %>
                    </option>
                    <% }); %>
                </select>
                <% } else { %>
                  <div>No Courses</div>
                  <% } %>
            </div>
          </fieldset>

          <button type="submit" class="btn btn-primary">Update</button>
        </form>
      </main>
    </div>
  </div>